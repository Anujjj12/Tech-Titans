<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Create Teacher Account</title>
    <style>
        /* Custom dark blue color */
        :root {
            --dark-blue: #1E3A8A;
            /* Tailwind's blue-800 */
            --dark-blue-hover: #1E40AF;
            /* Tailwind's blue-700 */
        }
    </style>
</head>

<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h3 class="text-3xl mb-6 text-center font-semibold text-gray-800">Create Teacher Account</h3>
        <form action="/registerTeacher" method="post" class="space-y-4">
            <!-- Username Field -->
            <div>
                <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                <input
                    class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md focus:border-blue-500 focus:ring-blue-500"
                    type="text" id="username" placeholder="Enter your username" name="username" required>
            </div>

            <!-- Name Field -->
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                <input
                    class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md focus:border-blue-500 focus:ring-blue-500"
                    type="text" id="name" placeholder="Enter your name" name="name" required>
            </div>

            <!-- Age Field -->
            <div>
                <label for="age" class="block text-sm font-medium text-gray-700 mb-1">Age</label>
                <input
                    class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md focus:border-blue-500 focus:ring-blue-500"
                    type="number" id="age" placeholder="Enter your age" name="age" required>
            </div>

            <!-- Email Field -->
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input
                    class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md focus:border-blue-500 focus:ring-blue-500"
                    type="email" id="email" placeholder="Enter your email" name="email" required>
            </div>

            <!-- Submit Button -->
            <div>
                <input
                    class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md cursor-pointer transition duration-200"
                    type="submit" value="Create Account">
            </div>
        </form>
    </div>
</body>

</html>